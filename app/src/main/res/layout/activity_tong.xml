<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dp"
    tools:context=".Tong">

    <RelativeLayout
        android:background="@drawable/gradient"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <TextView
            android:id="@+id/tong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Tong Sampah"
            android:textColor="#ffff"
            android:textSize="22dp"></TextView>

        <ImageButton
            android:id="@+id/restoreall"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="60dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_restore_24"/>
        <TextView
            android:textColor="#fff"
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/textrestore"
            android:layout_width="80dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:textSize="17dp"
            android:layout_toRightOf="@id/restoreall"
            android:layout_height="wrap_content"
            android:text="Restore All"/>

        <ImageButton
            android:id="@+id/deleteall"
            android:layout_toRightOf="@id/textrestore"
            android:layout_marginTop="60dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_baseline_delete_24"/>
        <TextView
            android:fontFamily="@font/roboto_regular"
            android:textColor="#fff"
            android:layout_width="80dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:textSize="17dp"
            android:layout_toRightOf="@id/deleteall"
            android:layout_height="wrap_content"
            android:text="Delete All"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/tonglist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>